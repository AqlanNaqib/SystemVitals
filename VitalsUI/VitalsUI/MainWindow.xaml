<Window x:Class="VitalsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VitalsUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#2D2D2D">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="SYSTEM VITALS MONITOR" 
                   Foreground="White" FontWeight="Bold" 
                   FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock x:Name="TempDisplay" 
                   Text="00.0°C" 
                   Foreground="#00FF00" 
                   FontSize="72" 
                   FontFamily="Consolas" 
                   HorizontalAlignment="Center"/>

            <TextBlock Text="CPU TEMPERATURE" 
                   Foreground="Gray" 
                   FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
